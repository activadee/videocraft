#!/bin/bash

echo "Running pre-push checks..."

# Run only critical checks that should block push
echo "ğŸ” Running staticcheck..."
staticcheck ./...

if [ $? -ne 0 ]; then
    echo "âŒ Staticcheck found critical issues!"
    exit 1
fi

echo "ğŸ” Running go vet..."
go vet ./...

if [ $? -ne 0 ]; then
    echo "âŒ Go vet found issues!"
    exit 1
fi

echo "âœ… Pre-push checks passed!"